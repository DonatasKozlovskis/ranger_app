<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/main"
    android:background="#ffffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
>


    <Button
        android:id="@+id/button_add"
        android:layout_width="180dip"
        android:layout_height="180dip"
        android:text="Add frame"
        style="@style/button_text"
        android:background="@drawable/red_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText"
        android:text="@string/default_frame_name"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:minHeight="@android:dimen/app_icon_size"
        android:minWidth="180dip"
        android:gravity="center"
        android:inputType="none"
        android:autoText="false"
        style="@style/button_text"
        android:background="@drawable/rounded_field"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@id/button_add"
        android:layout_centerHorizontal="true"
        android:maxWidth="250dip" />


    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_field_dark_gray"
        android:src="@drawable/abc_ic_voice_search_api_mtrl_alpha"
        android:minWidth="@android:dimen/app_icon_size"
        android:minHeight="@android:dimen/app_icon_size"
        android:layout_alignTop="@+id/editText"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />



</RelativeLayout>